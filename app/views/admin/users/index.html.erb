<div>
	<h2>All Users</h2>
	<ul>
		<% @users.each do |user| %>
			<li>
				<%= user.email %>
				<% if user.admin? %>
					<%= link_to "<i class='fa fa-user-circle' aria-hidden='true'></i>".html_safe, admin_user_path(user, user: {id: user.id, role: "superadmin"}), method: :put, remote: :true %>
				<% elsif user.superadmin? %>
					<%= link_to "<i class='fa fa-user-circle admin-color' aria-hidden='true'></i>".html_safe, admin_user_path(user, user: {id: user.id, role: "admin"}), method: :put, remote: :true %>
				<% end %>
				<%= link_to "<i class='fa fa-times alert-danger' aria-hidden='true'></i>".html_safe, admin_user_path(user), method: :delete, remote: true, :class => "text-danger", data: {confirm: "Are you sure you want to delete this user"}%>
			</li>
		<% end %>
	</ul>
</div>