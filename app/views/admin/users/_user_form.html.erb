<%= form_for [:admin, @user] do |f| %>
  <div class="form-group row">
    <%= f.label :uid, "UNI", class: "col-sm-2" %>

    <div class="col-sm-2">
      <% if @user.new_record? %>
        <%= f.text_field :uid, class: "form-control" %>
      <% else %>
        <p class="static-control-form"><%= @user.uid %></p>
      <% end %>
    </div>
  </div>



  <div class="form-group row">
    <%= f.label :role, class: "col-sm-2" %>

    <div class="col-sm-2">
      <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, {:class => "form-control"}) %>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-2">
      <% unless @user.new_record? %>
        <%= link_to "Delete User", admin_user_path(@user), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this user?"} %>
      <% end %>
    </div>
    <div class="col-sm-2"><%= f.submit class: 'btn btn-primary btn-sm'%></div>
  </div>
<% end %>
