<%= form_for [:admin, @user] do |f| %>
  <h4>Information</h4>

  <div class="form-group row">
    <%= f.label :uid, "UNI", class: "col-sm-2" %>
    <div class="col-sm-10">
      <% if @user.new_record? %>
        <%= f.text_field :uid, class: "form-control" %>
      <% else %>
        <p class="static-control-form"><%= @user.uid %></p>
      <% end %>
    </div>
  </div>

  <h4>Permissions</h4>
  <p>
    Administrators can add/edit/remove locations, users and timetables (hours).
    Editors can only edit location information and hours for the locations they
    have edit privilages to. Editors can have edit permissions for one or more
    locations.
  </p>
  <div class="form-group row">
    <%= f.label :admin, 'Administrator', class: "col-sm-2" %>

    <div class="col-sm-9">
      <%= radio_button_tag 'user[permissions][admin]', true, @user.admin? %>
      <%= label_tag :admin_yes, "Yes" %>
      &nbsp;
      <%= radio_button_tag 'user[permissions][admin]', false, !@user.admin? %>
      <%= label_tag :admin_no, "No" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :permissions, 'Editor for', class: "col-sm-2" %>
    <div class="col-sm-10">
      <div class="row">
        <% Location.order(:name).each do |lib| %>
          <div class="col-sm-6">
            <%= check_box_tag "user[permissions][location_ids][]", lib.id, @user.can?(:edit, lib),
                              class: 'chk-edit-permissions', id: "user_permissions_location_ids_#{lib.id}" %>
            <%= label_tag "user[permissions][location_ids][#{lib.id}]", lib.name %>
          </div>
       <% end %>
     </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <% unless @user.new_record? %>
        <%= link_to "Delete User", admin_user_path(@user), method: :delete,
                    class: "btn btn-danger btn-sm",
                    data: {confirm: "Are you sure you want to delete this user?"} %>
      <% end %>
    </div>
    <div class="col-sm-6"><%= f.submit class: 'btn btn-primary btn-sm'%></div>
  </div>
<% end %>
