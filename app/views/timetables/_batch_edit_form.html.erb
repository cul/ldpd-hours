<div class="col-md-12">
	<%= form_with model: Timetable.new, url:batch_update_location_timetables_path(location_code: @location.code), id: "batch_edit" do |f| %>

		<div class="form-group">
			<%= f.label :days %>
			<%= f.select :days, ["Mon-Thurs", "Friday", "Saturday", "Sunday"] %>
		</div>

		<div class="form-group">
			<%= f.label :start_date %>
			<%= f.text_field :start_date, data:{ provide:'datepicker' } %>
		</div>

		<div class="form-group">
			<%= f.label :end_date %>
			<%= f.text_field :end_date, data:{ provide:'datepicker' } %>
		</div>

		<div class="form-group">
      <%= f.label :open %>
      <%= time_select("timetable", "open", {ignore_date: true, ampm: true, minute_step: 15}) %>
    </div>

    <div class="form-group">
      <%= f.label :close %>
      <%= time_select("timetable", "close", {ignore_date: true, ampm: true, minute_step: 15}) %>
    </div>

    <%= f.submit class: "btn btn-primary btn-sm" %>

	<% end %>

</div>
