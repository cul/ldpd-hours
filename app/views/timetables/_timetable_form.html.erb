<div class="card card-outline-secondary bg-faded">
  <div class="card-block">
    <h4 class="card-title">Edit Hours</h4>
    <div class="card-text">
      <%= form_for @timetable, :url => batch_update_location_timetables_path(@location, @timetable), remote: true do |f| %>
        <div class="form-group">
          <%= f.label :open %>
          <%= time_select("timetable", "open", {ignore_date: true, ampm: true}) %>
        </div>

        <div class="form-group">
          <%= f.label :close %>
          <%= time_select("timetable", "close", {ignore_date: true, ampm: true}) %>
        </div>

        <div class="form-group">
          <%= f.label "TBD" %>
          <%= f.check_box :tbd %>

          <%= f.label :closed %>
          <%= f.check_box :closed %>
        </div>

        <div class="form-group">
          <%= f.label :note %>
          <%= f.text_field :note %>
        </div>

        <%= f.hidden_field :location_id, value: @location.id %>
        <%= f.submit "Update Hours", class: "btn btn-primary btn-sm" %>

        <hr>

        <div class="form-group">
          <h4>Selected Days</h4>
          <ul class="days-list"></ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
