<%= form_for @time_table, :url => timetables_batch_update_path(@library, @time_table), remote: true do |f| %>
    <h4>Edit Hours</h4>
    <div class="form-group">
        <%= f.label :open %>
        <%= time_select("time_table", "open", {ignore_date: true, ampm: true}) %>
    </div>

    <div class="form-group">
        <%= f.label :close %>
        <%= time_select("time_table", "close", {ignore_date: true, ampm: true}) %>
    </div>

    <div class="form-group">
        <%= f.label "TBD" %>
        <%= f.checkbox, :tbd %>

        <%= f.label :closed %>
        <%= f.checkbox, :closed %>
    </div>
    <%= f.submit "Update Hours", class: "btn btn-primary btn-sm" %>

    <hr>

    <div class="form-group">
        <h4>Selected Days</h4>
        <ul class="days-list">
            
        </ul>
    </div>
<% end %>